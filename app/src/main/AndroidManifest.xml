<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intoverflown.usersauthkt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UsersAuthKt">
        <activity
            android:name=".users.ProfileActivity"
            android:label="@string/usr_profile"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".users.ForgotPasswordActivity"
            android:label="Forgot Password"
            android:parentActivityName=".users.LoginActivity" />
        <activity
            android:name=".users.CreateAccountActivity"
            android:label="Create Account" />
        <activity android:name=".users.LoginActivity" android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:label="Home"/>
    </application>

</manifest>